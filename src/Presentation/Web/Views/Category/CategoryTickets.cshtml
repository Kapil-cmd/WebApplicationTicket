@model Common.ViewModels.CategoryTickets.CategoryTickets
<link rel="stylesheet" href="~/css/accordion.css" />
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css"> 
        <div class="container">
            <div id="accordion" class="panel-group">
                <div class="panel">
       @foreach(var cate in Model.category)
          {
              <div class="panel-heading">
              <h4 class="panel-title">
            <a href="#panelBodyOne" class="accordion-toggle" data-toggle="collapse" data-parent="#accordion">@cate.CategoryName</a>
            </h4>
             </div>
                <div id="panelBodyOne" class="panel-collapse collapse in">
            
            <div class="panel-body">
            <table class="table table-striped table-responsive">
         <thead>
        <tr>
            <th>
               TicketDetails
            </th>
            <th>
                CreatedBy
            </th>
            <th>
                 CreatedDateTime
            </th>
            <th>
                ModifiedDateTime
            </th>
            <th>
                ModifiedBy
            </th>
            <th>
               AssignedTo
            </th>
            <th>
               CategoryName
            </th>
            <th>
                Status
            </th>
            <th>
                ImageName
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
           @if(Model.Tickets.Any())
            {
                foreach(var list in Model.Tickets)
                {
                    <tr>
                       <td>
                          @Html.DisplayFor(modelItem => list.TicketDetails)
                       </td>
                       <td>
                           @Html.DisplayFor(modelItem => list.CreatedBy)
                       </td>
                       <td>
                          @Html.DisplayFor(modelItem => list.CreatedDateTime)
                       </td>
                       <td>
                           @Html.DisplayFor(modelItem => list.ModifiedDateTime)
                       </td>
                       <td>
                           @Html.DisplayFor(modelItem => list.ModifiedBy)
                       </td>                             
                       <td>                              
                           @Html.DisplayFor(modelItem => list.AssignedTo)
                       </td>                             
                       <td>                              
                           @Html.DisplayFor(modelItem => list.CategoryName)
                       </td>                             
                       <td>                              
                           @Html.DisplayFor(modelItem => list.Status)
                       </td>                             
                       <td>                              
                           @Html.DisplayFor(modelItem => list.ImageName)
                       </td>
                       <td>
                       <div class="w-75 btn-group" role="group">
                            <a title="Edit"  asp-controller="Ticket" asp-action="EditTicket" asp-route-TicketId="@list.TicketId" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>
                            <a title="Detail" asp-controller="Ticket" asp-action="DetailTicket" asp-route-TicketId="@list.TicketId" class="btn btn-sm btn-danger mx-2"><i class="bi bi-eye"></i></a>
                            <a title="Delete" asp-controller="Ticket" asp-action="Delete" asp-route-TicketId="@list.TicketId" class="btn btn-sm btn-danger mx-2"><i class="bi bi-trash-fill"></i></a>
                       </div>
                       </td>
                     </tr>  
                        
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
            </tbody>
            </table>
            </div>
            </div>
        }
        
    </div>
    </div>
    </div>
    
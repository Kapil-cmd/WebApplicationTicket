@model IEnumerable<Repository.Entites.User>

@{
    ViewData["Title"] = "Index";
}

<h1>User List</h1>
<div class="row">
    <div class="col">
        <a asp-action="RegisterUser" class="btn btn-sm btn-primary pull-right">Create New</a>
    </div>
</div>
<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>
                Username
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Address
            </th>
            <th>
                Email
            </th>
            <th>
                Age
            </th>
            <th>
                Phone Number
            </th>
            <th>Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a title="Edit" asp-controller="User" asp-action="EditUser" asp-route-Id="@item.Id" class="btn btn-sm btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>
                        <a title="Detail" asp-controller="User" asp-action="UserDetails" asp-route-Id="@item.Id" class="btn btn-sm btn-danger mx-2"><i class="bi bi-eye"></i></a>
                         <a title="Delete" asp-controller="User" asp-action="DeleteUser" asp-route-Id="@item.Id" class="btn btn-sm btn-danger mx-2"><i class="bi bi-trash-fill"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@model IEnumerable<Repository.Entities.FieldValidation>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="row">
    <div class="col">
        <a asp-action="Create" class="btn btn-sm btn-primary pull-right">Create New</a>
    </div>
</div>
<table class="table table-responsive table-striped">
    <thead>
        <tr>
            <th>
                Length
            </th>
             <th>
                Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.Length)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                    <div class="w-75 btn-group" role="group">
                        <a title="Edit" asp-controller="FieldValidate" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-sm btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>
                         <a title="Detail" asp-controller="FieldValidate" asp-action="deleteField" asp-route-CId="@item.Id" class="btn btn-sm btn-danger mx-2"><i class="bi bi-trash-fill"></i></a>
                     </div>
                </td>
                    </tr>
                }
            }
        }
    </tbody>
</table>

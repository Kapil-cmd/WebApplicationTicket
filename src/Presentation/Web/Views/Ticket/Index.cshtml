@model X.PagedList.IPagedList<Repository.Entites.Ticket>
@using X.PagedList.Mvc.Core;
@using X.PagedList;
<link href="~/css/page.css" rel="stylesheet" />

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="row">
    <div class="col">
        <a asp-action="Create" class="btn btn-sm btn-primary pull-right">Create New</a>
    </div>
</div>
@using (Html.BeginForm("Index","Ticket", FormMethod.Get))
{
    <p>
        Fint by Username: @Html.TextBox("Search_Data",ViewBag.FilterValue as string)
        <input type="submit" value="Find" class="btn btn-group-sm"/>
    </p>
}
<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>
               TicketDetails
            </th>
            <th>
                @Html.ActionLink("CreatedBy","Index",new{Sorting_Order = ViewBag.SortingName, Filter_Value = ViewBag.FilterValue}) 
            </th>
            <th>
                 @Html.ActionLink("CreatedDateTime","Index",new{Sorting_Order = ViewBag.SortingDate, Filter_Value = ViewBag.FilterValue}) 
            </th>
            <th>
                ModifiedDateTime
            </th>
            <th>
                ModifiedBy
            </th>
            <th>
               AssignedTo
            </th>
            <th>
               @Html.ActionLink("CategoryName","Index",new{Sorting_Order = ViewBag.SortingCName}) 
            </th>
            <th>
                Status
            </th>
            <th>
                ImageName
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            if(Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                       <td>
                          @Html.DisplayFor(modelItem => item.TicketDetails)
                       </td>
                       <td>
                           @Html.DisplayFor(modelItem => item.CreatedBy)
                       </td>
                       <td>
                          @Html.DisplayFor(modelItem => item.CreatedDateTime)
                       </td>
                       <td>
                           @Html.DisplayFor(modelItem => item.ModifiedDateTime)
                       </td>
                       <td>
                           @Html.DisplayFor(modelItem => item.ModifiedBy)
                       </td>
                       <td>
                           @Html.DisplayFor(modelItem => item.AssignedTo)
                       </td>
                       <td>
                           @Html.DisplayFor(modelItem => item.CategoryName)
                       </td>
                       <td>
                           @Html.DisplayFor(modelItem => item.Status)
                       </td>
                       <td>
                           @Html.DisplayFor(modelItem => item.ImageName)
                       </td>
                       <td>
                       <div class="w-75 btn-group" role="group">
                            <a title="Edit"  asp-controller="Ticket" asp-action="EditTicket" asp-route-TicketId="@item.TicketId" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>
                            <a title="Detail" asp-controller="Ticket" asp-action="DetailTicket" asp-route-TicketId="@item.TicketId" class="btn btn-sm btn-danger mx-2"><i class="bi bi-eye"></i></a>
                            <a title="Delete" asp-controller="Ticket" asp-action="Delete" asp-route-TicketId="@item.TicketId" class="btn btn-sm btn-danger mx-2"><i class="bi bi-trash-fill"></i></a>
                       </div>
                       </td>
                     </tr>

                }    
            
            }
        }

    </tbody>
</table>
<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount 
@Html.PagedListPager(Model, Page_No =>Url.Action("Index",  
    new { Page_No, Sorting_Order= ViewBag.CurrentSortOrder, Filter_Value = ViewBag.FilterValue }))

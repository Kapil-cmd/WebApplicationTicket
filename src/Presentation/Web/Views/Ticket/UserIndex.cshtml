@model IEnumerable<Repository.Entites.Ticket>
@{
    ViewData["Title"] = "Your Ticket";
}

<h1>Your Ticket</h1>
<div class="row">
    <div class="col">
        <a asp-action="Create" class="btn btn-sm btn-primary pull-right">Create New</a>
    </div>
</div>
<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>
               TicketDetails
            </th>
            <th>
                CategoryName
            </th>
            <th>
                Status
            </th>
            <th>
                ImageName
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            if(Model != null)
            {
                foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TicketDetails)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageName)
            </td>
            <td>
            <div class="w-75 btn-group" role="group">
                     <a title="Detail" asp-controller="Ticket" asp-action="DetailTicket" asp-route-TicketId="@item.TicketId" class="btn btn-sm btn-danger mx-2"><i class="bi bi-eye"></i></a>
                </div>
                </td>
        </tr>
}                
            }
        }

    </tbody>
</table>
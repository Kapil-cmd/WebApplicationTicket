@model IEnumerable<Repository.Entities.CategoryTemp>

@{
    ViewData["Title"] = "Index";
}

<h1>Excel Sheets of Company</h1><br /><br />

<div class="container">
    <form method="post" asp-controller="CategoryTemp" asp-action="GetExcel" enctype="multipart/form-data">
        <input type="file" name="file" />
        <button type="submit">Import From Excel</button>
    </form><br />
    </div>
<table class="table table-responsive table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                Action
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            if(Model != null)
            {
                foreach (var item in Model) 
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoryName)
                        </td>
                        <td>
                        </td>
                        <td>
                        <a title="Detail" asp-controller="CategoryTemp" asp-action="deleteField" asp-route-Id="@item.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>
                        <a title="Detail" asp-controller="CategoryTemp" asp-action="deleteField" asp-route-Id="@item.Id" class="btn btn-sm btn-danger mx-2"><i class="bi bi-trash-fill"></i></a>
                        </td>

                    </tr>
                }   
            }
         }
    </tbody>
     <a title="Upload"  asp-controller="CategoryTemp" asp-action="Send" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>
</table>

@model IEnumerable<Repository.Entites.Role>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="CreateRole" class="btn btn-outline-success">Create New</a>
    &nbsp;
    <a asp-controller="Home" asp-action="HomePage" class="btn btn-outline-info">HomePage</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
             <td><br/>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Role" asp-action="EditRole" asp-route-Id="@item.Id"
                    class="btn btn-primary mx-2" ><i class="bi bi-pencil-square"></i>Edit</a>
                    <a asp-controller="Role" asp-action="AssignPermissionToRole" asp-route-Id="@item.Id"
                    class="btn btn-danger mx-2" ><i class="bi bi-dpad-fill"></i>Manage Permission</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
